<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:showIn="@layout/activity_add_name"
    tools:context="com.nomprenom2.view.AddNameActivityFragment">


    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sex_spinner"
        android:layout_below="@+id/name_tw"
        android:layout_centerHorizontal="true"
        android:spinnerMode="dropdown"
        android:layout_margin="6dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/zod_spinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/sex_spinner"
        android:spinnerMode="dropdown"
        android:layout_margin="6dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter character description"
        android:id="@+id/character_tw"
        android:layout_below="@+id/zod_spinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:editable="true"
        android:lines="12"
        android:layout_margin="6dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter famous persons with who has\had this name"
        android:id="@+id/fam_tw"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/character_tw"
        android:lines="5"
        android:editable="true"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_alignRight="@+id/zod_spinner"
        android:layout_alignEnd="@+id/zod_spinner" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Enter name"
        android:id="@+id/name_tw"
        android:layout_alignParentTop="true"
        android:editable="true"
        android:layout_alignLeft="@+id/sex_spinner"
        android:layout_alignStart="@+id/sex_spinner"
        android:layout_alignRight="@+id/sex_spinner"
        android:layout_alignEnd="@+id/sex_spinner"
        android:gravity="center" />
</RelativeLayout>
